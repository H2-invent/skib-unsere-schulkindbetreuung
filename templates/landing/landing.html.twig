<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Unsere Schulkindbetreuung</title>
    <!-- Font Awesome -->
    <link href="{{ asset('frontpage/css/bootstrap.min.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Bootstrap core CSS -->
    <link href="{{ asset('frontpage/css/bootstrap.min.css') }}" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="{{ asset('frontpage/css/mdb.min.css') }}" rel="stylesheet">
    <!-- Your custom styles (optional) -->

    <link href="{{ asset('frontpage/css/style.min.css') }}" rel="stylesheet">
    <link href="https://cdn.rawgit.com/FezVrasta/snackbarjs/1.1.0/dist/snackbar.min.css" rel="stylesheet">


{% include 'workflow/inlineCSS.html.twig' with {'height':'100%','stadt':null} %}

</head>

<body>
<!-- Navbar -->
{% include 'workflow/navbar.html.twig' with {'stadt':null} %}
<!-- Navbar -->

<!-- Full Page Intro -->
<div class="view full-page-intro"
     style="background-image: url('{{ asset('images/background.jpg') }}'); background-repeat: no-repeat; background-size: cover;">

    <!-- Mask & flexbox options-->
    <div class="mask rgba-black-light d-flex justify-content-center align-items-center">

        <!-- Content -->
        <div class="container">

            <!--Grid row-->
            <div class="row wow fadeIn">

                <!--Grid column-->
                <div class="col-md-6 mb-4 text-center text-md-left" style="word-break: break-word">

                    <h1 class="display-4 white-text font-weight-bold">Unsere Schulkindbetreuung</h1>

                </div>

                <div class="col-md-6 mb-4 text-center text-md-left">
                    <div class="row">
                        {% for s in stadt %}
                            <div class="col-md-6">
                                <div class="card align-items-center">

                                    <img class="card-img-top " src="{{ vich_uploader_asset(s,'imageFile') }}">

                                    <div class="card-body">

                                        <h4 class="card-title">{{ s.name }}</h4>
                                        <!-- Text -->
                                        <p class="card-text">{{ s.translate.infoText|nl2br|length > 50 ? s.translate.infoText|nl2br|slice(0,50)~'...':s.translate.infoText }}</p>
                                        <!-- Button -->
                                        <a href="{{ path('workflow_start',{'slug':s.slug}) }}"
                                           class="btn btn-primary">{{ 'Ich lebe in '~s.name|trans }}</a>

                                    </div>

                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% include 'workflow/footer.html.twig' with {'fix':'1'} %}

<script type="text/javascript" src="{{ asset('frontpage/js/jquery-3.4.1.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('frontpage/js/popper.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('frontpage/js/bootstrap.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('frontpage/js/mdb.min.js') }}"></script>
<script src="https://cdn.rawgit.com/FezVrasta/snackbarjs/1.1.0/dist/snackbar.min.js"></script>
</body>

</html>