<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    {% include 'workflow/_head.html.twig' with {'stadt':null} %}
    {% include 'workflow/inlineCSS.html.twig' with {'height':'70%'} %}
</head>

<body>

{% include 'workflow/navbar.html.twig' %}

<!-- Navbar -->

<!-- Full Page Intro -->


<div class="view"
{% if stadt is defined and stadt is not null and stadt.image is not empty %}
     style="background-image: url({{ vich_uploader_asset(stadt,'imageFile') }}); background-repeat: no-repeat; background-size: cover;">
{% else %}
    style="background-image: url('{{ asset('images/background.jpg') }}'); background-repeat: no-repeat; background-size: cover;">
{% endif %}
    <!-- Mask & flexbox options-->
    <div class="mask rgba-black-light d-flex align-items-end">
        <!-- Content -->
        <div class="container">
            <!--Grid row-->
            <div class="row wow fadeIn">

                {% block header %}
                    <div class="col-md-6 mb-4 white-text text-centerm text-md-left">

                        <h1 class="font-weight-bold h1-responsive">{% trans %}SchuKiB{% endtrans %}</h1>
                        <hr class="hr-light ">

                    </div>
                {% endblock %}
            </div>
            <!--Grid row-->
        </div>
        <!-- Content -->
    </div>
    <!-- Mask & flexbox options-->
</div>
<!-- Full Page Intro -->
<main>
    <div class="container">
        <!--Section: Main info-->
        <section class="mt-5 wow fadeIn">
            <!--Grid row-->
            <div class="row">
                <!--Grid column-->
                <div class="col-lg-12">
                    {% block content %}
                    {% endblock %}
                </div>
                <!--Grid column-->
            </div>
        </section>
    </div>
</main>

{% include 'workflow/footer.html.twig' %}

<div class="modal fade" id="loadContentModal" tabindex="-1" role="dialog" aria-labelledby="loadContentModal"
     aria-hidden="true">

</div>

<!-- SCRIPTS -->
<!-- JQuery -->
<script type="text/javascript" src="{{ asset('frontpage/js/jquery-3.4.1.min.js') }}"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="{{ asset('frontpage/js/popper.min.js') }}"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="{{ asset('frontpage/js/bootstrap.min.js') }}"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="{{ asset('frontpage/js/mdb.min.js') }}"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
<script src="{{ asset('frontpage/js/snackbar.js') }}"></script>
<script src="{{ asset('js/jquery.bs.gdpr.cookies.js') }}"></script>
<script>
{% include 'workflow/_cookiePopup.js.twig' %}
</script>

<script>
    $(document).on('click', '.loadContent', function (e) {
        e.preventDefault();
        var url = $(this).attr('href');
        $('#loadContentModal').load(url, function () {
            $('#loadContentModal ').modal('show');
        });

    });
</script>
<script>
    // popovers Initialization
    $(function () {
        $('[data-toggle="popover"]').popover()
    })
</script>
<script>

    {% if app.request.query.get("snack") is defined and app.request.query.get("snack") is not null %}
    var options = {

        text: "{{ app.request.query.get("snack") }}", // text of the snackbar
        duration: 10000, // time in milliseconds after the snackbar autohides, 0 is disabled
        pos: 'bottom-center',
    };
    Snackbar.show(options);
    {% endif %}

    $(document).on('click','.deleteBtn',function (e) {
        e.preventDefault();
        var url = $(this).attr('href');
        var type = $(this).attr('type');
        $.confirm({
            title: '{{ 'Bestätigung'|trans }}',
            content: '{{ 'Wollen Sie diese Aktion durchführen?'|trans }}',
            theme: 'material',
            buttons: {
                confirm: function () {
                    $.ajax({
                        url: url,
                        type: type,
                        success: function (data) {
                            if (data.redirect) {
                                window.location.href= data.redirect;
                            }
                        }
                    });
                },
                cancel: function () {

                },

            }
        });
    });

</script>

{% block jquery %}{% endblock %}
</body>

</html>
