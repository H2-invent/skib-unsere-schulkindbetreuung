<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="{{ asset('frontpage/js/bootstrap.min.js') }}"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="{{ asset('frontpage/js/mdb.min.js') }}"></script>
<script src="{{ asset('frontpage/js/snackbar.js') }}"></script>
<script>
    $(document).on('click', '.loadContent', function (e) {
        e.preventDefault();
        var url = $(this).attr('href');
        $('#loadContentModal').load(url, function () {
            $('#loadContentModal ').modal('show');
        });

    });

</script>
<script>
    // popovers Initialization
    $(function () {
        $('[data-toggle="popover"]').popover()
    })
</script>
<script src="{{ asset('js/jquery.bs.gdpr.cookies.js') }}"></script>
<script type="text/javascript">
    var settings = {
        message: 'Cookies erleichtern die Bereitstellung unserer Dienste. Mit der Nutzung unserer Dienste erklären Sie sich damit einverstanden, dass wir Cookies verwenden. Weitere Informationen zum Datenschutz erhalten Sie über den folgenden Link: <b> Mehr erfahren  ',
