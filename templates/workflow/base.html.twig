<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    {% include 'workflow/_head.html.twig' with {'stadt':null} %}
    {% include 'workflow/inlineCSS.html.twig' with {'height':'70%'} %}
</head>

<body>

{% include 'workflow/navbar.html.twig' %}

<!-- Navbar -->

<!-- Full Page Intro -->


<div class="view"
        {% if stadt is defined and stadt is not null and stadt.image is not empty %}
     style="background-image: url({{ vich_uploader_asset(stadt,'imageFile') }}); background-repeat: no-repeat; background-size: cover;">
    {% else %}
        style="background-image: url('{{ asset('images/background.jpg') }}'); background-repeat: no-repeat; background-size: cover;">
    {% endif %}
    <!-- Mask & flexbox options-->
    <div class="mask rgba-black-light d-flex align-items-end">
        <!-- Content -->
        <div class="container">
            <!--Grid row-->
            <div class="row wow fadeIn">

                {% block header %}
                    <div class="col-md-6 mb-4 white-text text-centerm text-md-left">

                        <h1 class="font-weight-bold h1-responsive">SKiB</h1>
                        <hr class="hr-light ">

                    </div>
                {% endblock %}
            </div>
            <!--Grid row-->
        </div>
        <!-- Content -->
    </div>
    <!-- Mask & flexbox options-->
</div>
<!-- Full Page Intro -->
<main>
    <div class="container">
        <!--Section: Main info-->
        <section class="mt-5 wow fadeIn">
            <!--Grid row-->
            <div class="row">
                <!--Grid column-->
                <div class="col-lg-12">
                    {% block content %}
                    {% endblock %}
                </div>
                <!--Grid column-->
            </div>
        </section>
    </div>
</main>

{% include 'workflow/footer.html.twig' %}

<div class="modal fade" id="loadContentModal" tabindex="-1" role="dialog" aria-labelledby="loadContentModal"
     aria-hidden="true">

</div>

