{% extends 'workflow/base.html.twig' %}
{% block header %}
    <div class="col-md-12 mb-6 white-text text-center text-md-left">
        {% if stadt.logoUrl is empty %}
            <h1 class="display-4 font-weight-bold hauptfarbe">{{ stadt.name }}</h1>
        {% else %}
            <img src="{{ stadt.logoUrl}}" alt="{{ stadt.name }}"style="max-height: 150px">
        {% endif %}
        <hr class="hr-light ">
    </div>

{% endblock %}
{% block content %}

    <div class="card">
        <div class="card-header">
            <h4> {% trans %}Kind/Kinder hinzufügen{% endtrans %}</h4>
        </div>
        <div class="card-body">
            <section class="dashboard-counts section-padding" id="schulenShow">
                <div class="container-fluid ">

                    <div class="card-deck">
                        <!-- Count item widget-->
                        {% for s in schule %}

                            <div class="card mb-4 ">
                                <div class="view overlay">
                                    <img class="card-img-top" src="{{ vich_uploader_asset(s,'imageFile') }}"
                                         alt="{{ s.name }}" style="max-height: 300px">

                                </div>

                                <div class="card-body ">
                                    <h5 class="card-title">{{ s.name }}</h5>
                                    <p class="card-text">{{ s.infoText }}</p>

                                    <a href="{{ path('loerrach_workflow_schulen_kind_neu', {'schule_id':s.id}) }}"
                                       class="loadContent btn btn-outline-primary">{% trans %}Kind hinzufügen  {% endtrans %}</a>

                                </div>
                                {% if kinder[s.id] is defined and kinder[s.id] is not null %}
                                    {% for k in kinder[s.id] %}
                                        <div class="card-body">
                                            {{ k.vorname }} {{ k.nachname }}
                                            <b><span class="price">{% if k.tageWithBlocks>=2 %}{{ k.PreisforBetreuung|number_format(2,',','.') }}€{% endif %}</span></b>
                                            <div class="btn-group">
                                                <button class="btn bmd-btn-icon dropdown-toggle" type="button" id="ex2"
                                                        data-toggle="dropdown" aria-haspopup="true"
                                                        aria-expanded="false">

                                                </button>
                                                <div class="dropdown-menu dropdown-menu-left" aria-labelledby="ex2">
                                                    <a href="{{ path('loerrach_workflow_schulen_kind_edit', {'kind_id':k.id}) }}"
                                                       class=" loadContent dropdown-item">{% trans %}Bearbeiten{% endtrans %}</a>
                                                    <a href="{{ path('loerrach_workflow_schulen_kind_zeitblock', {'kind_id':k.id}) }}"
                                                       class=" loadContent dropdown-item">{% trans %}Betreuungsblöcke bearbeiten{% endtrans %}</a>
                                                    <a href="{{ path('loerrach_workflow_kind_delete', {'kind_id':k.id}) }}"
                                                       class="dropdown-item">{% trans %}Löschen{% endtrans %}</a>

                                                </div>
                                            </div>
                                        </div>

                                    {% endfor %}
                                {% endif %}

                            </div>

                        {% endfor %}
                    </div>

                </div>
            </section>
            <div class="text-center">
                <a href="{{ path('loerrach_workflow_adresse') }}"
                   class="btn btn-outline-secondary">{% trans %}Zurück{% endtrans %}</a>
                <a href="{{ path('loerrach_workflow_zusammenfassung') }}"
                   class="btn btn-outline-primary">{% trans %}Weiter{% endtrans %}</a>
            </div>
        </div>
    </div>
{% endblock %}
{% block jquery %}
    <script>
        $(document).on('click','.chooseBlock',function (e) {

            var ele = $(this);
            var url = ele.attr('href');
            ele.find('.loader').removeClass('d-none');
            $.ajax({
                url: url,
                method: 'GET',
                success: function (data) {

                    if (data.error == 0 || data.error == 2) {
                        var klasse = 'bg-warning';

                        if(data.kontingent == false){
                            klasse='bg-success';
                        }
                        ele.toggleClass(klasse);
                        if (ele.hasClass(klasse)) {

                            ele.find('.gebucht-text').text(data.cardText);
                        } else {
                            ele.find('.gebucht-text').text('');
                        }
                    } else {


                    }
                    ele.closest('.modal-body').find('.price').text(data.text);
                    if (data.error == 0) {
                        $.ajax({
                            url: data.preisUrl,
                            method: 'GET',
                            success: function (data) {
                                ele.closest('.modal-body').find('.price').text(data.betrag+'€')
                            }

                        });
                    }
                       // $.snackbar(options);
                    ele.find('.loader').addClass('d-none');


                }
            })
        })

        $("#loadContentModal").on('hide.bs.modal', function(){
        $('#schulenShow') .load('{{ path('loerrach_workflow_schulen') }} #schulenShow');
        });
    </script>

{% endblock %}
