{% extends 'workflow/base.html.twig' %}
{% block header %}
    <div class="col-md-12 mb-6 white-text text-center text-md-left">
        <h1 class="font-weight-bold hauptfarbe">{% trans %}Online Anmeldung{% endtrans %}</h1>
        <div class="progress mb-2">
            <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0"
                 aria-valuemax="100">{% trans %}Schulen und Kinder{% endtrans %}</div>
        </div>
    </div>

{% endblock %}
{% block content %}

    <div class="card">
        <div class="card-header">
            <h4> {% trans %}Daten des Kindes/Kinder{% endtrans %}</h4>
        </div>
        <div class="card-body">
            <section class="dashboard-counts section-padding" id="schulenShow">
                <div class="container-fluid ">
                    <div class="row">
                        <!-- Count item widget-->
                        {% for s in schule %}
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card h-100 hoverable">
                                    <div class="view overlay skib-card-image">
                                        {% if s.image %}
                                            <img class="card-img-top"
                                            src="{{ vich_uploader_asset(s,'imageFile') }}"
                                            alt="{{ s.name }}" style="max-height: 300px">
                                        {% else %}
                                            <img class="card-img-top" src="{{ asset('images/logo-breit-mittig.png') }}">
                                        {% endif %}
                                    </div>

                                    <div class="card-body ">
                                        <h5 class="card-title">{{ s.name }}</h5>
                                        <p class="card-text">{{ s.infoText }}</p>

                                        <a href="{{ path('loerrach_workflow_schulen_kind_neu', {'schule_id':s.id,'slug':stadt.slug}) }}"
                                           class="waves-effect loadContent btn btn-outline-primary">{% trans %}Kind anmelden{% endtrans %}</a>

                                    </div>
                                    {% if kinder[s.id] is defined and kinder[s.id] is not null %}
                                        {% for k in kinder[s.id] %}
                                            <div class="card-body">
                                                <div class="btn-group">
                                                    <button class="btn bmd-btn-icon dropdown-toggle waves-effect px-3" type="button"
                                                            id="ex2"
                                                            data-toggle="dropdown" aria-haspopup="true"
                                                            aria-expanded="false">

                                                    </button>
                                                    <div class="dropdown-menu dropdown-menu-left" aria-labelledby="ex2">
                                                        <a href="{{ path('loerrach_workflow_schulen_kind_edit', {'kind_id':k.id,'slug':stadt.slug}) }}"
                                                           class=" loadContent dropdown-item">{% trans %}Bearbeiten{% endtrans %}</a>
                                                        <a href="{{ path('loerrach_workflow_schulen_kind_zeitblock', {'kind_id':k.id,'slug':stadt.slug}) }}"
                                                           class=" loadContent dropdown-item">{% trans %}Betreuungszeitfenster bearbeiten{% endtrans %}</a>
                                                        <a type="DELETE"
                                                           href="{{ path('loerrach_workflow_kind_delete', {'kind_id':k.id,'slug':stadt.slug}) }}"
                                                           class="dropdown-item deleteBtn">{% trans %}Löschen{% endtrans %}</a>

                                                    </div>
                                                </div>
                                                {{ k.vorname }} {{ k.nachname }}
                                                <b><span class="price">{% if k.tageWithBlocks>=2 %}{{ k.PreisforBetreuung|number_format(2,',','.') }}€{% endif %}</span></b>
                                            </div>

                                        {% endfor %}
                                    {% endif %}

                                </div>
                            </div>
                        {% endfor %}
                    </div>

                </div>
            </section>
            <div class="text-center">
                <a href="{{ path('loerrach_workflow_adresse',{'slug':stadt.slug}) }}"
                   class="btn btn-outline-secondary">{% trans %}Zurück{% endtrans %}</a>
                <a href="{{ path('loerrach_workflow_mittagessen', {'slug':stadt.slug}) }}"
                   class="btn btn-outline-primary">{% trans %}Weiter{% endtrans %}</a>
            </div>
        </div>
    </div>
{% endblock %}
{% block jquery %}
    <script>
        $(document).on('click', '.chooseBlock', function (e) {
            e.preventDefault();
            var ele = $(this);
            var url = ele.attr('href');
            ele.find('.loader').removeClass('d-none');
            $.ajax({
                url: url,
                method: 'PATCH',
                success: function (data) {

                    if (data.error == 0 || data.error == 2) {
                        var klasse = 'bg-warning';

                        if (data.kontingent == false) {
                            klasse = 'bg-success';
                        }
                        ele.toggleClass(klasse);
                        if (ele.hasClass(klasse)) {

                            ele.find('.gebucht-text').text(data.cardText);
                        } else {
                            ele.find('.gebucht-text').text('{{ 'Hier buchen'|trans }}');
                        }
                    } else {


                    }
                    ele.closest('.modal-body').find('.price').text(data.text);
                    if (data.error == 0) {
                        $.ajax({
                            url: data.preisUrl,
                            method: 'GET',
                            success: function (data) {
                                ele.closest('.modal-body').find('.price').text(data.betrag + '€')
                            }

                        });
                    }
                    // $.snackbar(options);
                    ele.find('.loader').addClass('d-none');


                }
            })
        })

        $("#loadContentModal").on('hide.bs.modal', function () {
            $('#schulenShow').load('{{ path('loerrach_workflow_schulen',{'slug':stadt.slug}) }} #schulenShow');
        });
    </script>

{% endblock %}
