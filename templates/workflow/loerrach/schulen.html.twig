{% extends 'workflow/base.html.twig' %}
{% block content %}
    <style>
        .modal-dialog {
            max-width: 90%;

        }
    </style>
    <h5>{% trans %}Bitte Schulen auswählen und Kinder hinzufügen{% endtrans %}</h5>
    <p>{% trans %}Text2{% endtrans %}</p>
    <section class="dashboard-counts section-padding" id="schulenShow">
        <div class="container-fluid ">
            <div class="row">
                <!-- Count item widget-->
                {% for s in schule %}
                    <div class="card" style="width: 18rem; margin-right: 8px ">
                        <img class="card-img-top" src="{{ vich_uploader_asset(s,'imageFile') }}" alt="{{ s.name }}"style="max-height: 300px">

                        <div class="card-body">
                            <h5 class="card-title">{{ s.name }}</h5>
                            <p class="card-text">{{ s.infoText }}</p>

                            <p class="card-text">{% trans %}Kind hinzufügen  {% endtrans %} <a href="{{ path('loerrach_workflow_schulen_kind_neu', {'schule_id':s.id}) }}" class="loadContent"><button type="button" class="btn  bmd-btn-fab bmd-btn-fab-sm">
                                    <i class="material-icons">add</i>
                                </button></a></p>
                            <ul class="list-group list-group-flush">
                                {%  if kinder[s.id] is defined and kinder[s.id] is not null %}
                                    {% for k in kinder[s.id] %}
                                        <li class="list-group-item">{{ k.vorname }} {{ k.nachname }}
                                            <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                                                <a href="{{ path('loerrach_workflow_schulen_kind_zeitblock', {'kind_id':k.id}) }}" class="btn btn-secondary loadContent">
                                                     <i class="material-icons">view_module</i></a>
                                                <a href="{{ path('loerrach_workflow_kind_delete', {'kind_id':k.id}) }}" class="btn btn-secondary">
                                                    <i class="material-icons">delete</i></a>

                                            </div>




                                        </li>
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                {% endfor %}

            </div>
    </section>

{% endblock %}
{% block jquery %}
    <script>
        $(document).on('click','.chooseBlock',function (e) {

            var ele = $(this);
            var url = ele.attr('href');
            $.ajax({
                url: url,
                method: 'GET',
                success: function (data) {
                    if (data.error == 0) {
                        ele.toggleClass('bg-success');
                    }else {
                        var options =  {
                            content: "{% trans %}Fehler: Bitte laden Sie die Seite neu.{% endtrans %}", // text of the snackbar
                            timeout: 10000, // time in milliseconds after the snackbar autohides, 0 is disabled
                        };
                        $.snackbar(options);
                    }
                }

            })
        });
    </script>

{% endblock %}