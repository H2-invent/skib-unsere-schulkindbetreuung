{% if blocks is defined %}
    {% for b in blocks %}
        <div href="{{ path('loerrach_workflow_kinder_block_toggle', {'kinder_id':kind.id, 'block_id':b.id}) }}" class="{% if b in kind.zeitblocks %}bg-success{% endif %} card chooseBlock">
            <div class="card-body text-center">
                <div class="loader d-none"><span class="spinner-border mr-2" role="status" aria-hidden="true"></span></div>
                {{ b.ganztag == 0? 'Mittagessen' }}<br>
                {{ b.von|date('H:i') }}-{{ b.bis|date('H:i') }}<br>
                <b>Grundpreis: {{ b.preise[kind.eltern.einkommen]|number_format(2,',') }}â‚¬</b><br>
                <b class="gebucht-text">{% if b in kind.zeitblocks %}Gebucht{% endif %}</b>

            </div>
        </div>
    {% endfor %}
{% endif %}




