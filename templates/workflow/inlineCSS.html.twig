<style type="text/css">
    html,
    body,
    header,
    .view {
        height: {{height}};
    }

    @media (min-width: 800px) and (max-width: 850px) {
        .navbar:not(.top-nav-collapse) {
            background: #1C2331 !important;
        }
    }

    {% if stadt is defined and stadt is not null %}
    .btn-primary {
        background-color: {{ stadt.hauptfarbe }} !important;
        border-color: {{ stadt.hauptfarbe }} !important;
        color: #fff;
    }

    .btn-outline-primary {
        border: 2px solid {{ stadt.hauptfarbe }} !important;
        color: #0b2e13 !important;
    }

    .hauptfarbe {
        color: {{ stadt.hauptfarbe }} !important;
    }

    .popover-header {
        background-color: {{ stadt.hauptfarbe }} !important;
    }

    .popover {
        border: 1px solid {{ stadt.hauptfarbe }} !important;
    }

    .card-header {
        background-color: {{stadt.akzentfarbe}} !important;
    }
    {% endif %}

    #scroll a {
        padding-top: 10px;
    }
    #scroll a span {
        margin-top: -30px;
        position: absolute;
        top: 0;
        left: 50%;
        width: 24px;
        height: 24px;
        margin-left: -2px;
        border-left: 1px solid #fff;
        border-bottom: 1px solid #fff;
        -webkit-transform: rotate(-45deg);
        transform: rotate(-45deg);
        -webkit-animation: sdb04 2s infinite;
        animation: sdb04 2s infinite;
        box-sizing: border-box;
    }
    @-webkit-keyframes sdb04 {
        0% {
            -webkit-transform: rotate(-45deg) translate(0, 0);
        }
        20% {
            -webkit-transform: rotate(-45deg) translate(-10px, 10px);
        }
        40% {
            -webkit-transform: rotate(-45deg) translate(0, 0);
        }
    }
    @keyframes sdb04 {
        0% {
            transform: rotate(-45deg) translate(0, 0);
        }
        20% {
            transform: rotate(-45deg) translate(-10px, 10px);
        }
        40% {
            transform: rotate(-45deg) translate(0, 0);
        }
    }
</style>