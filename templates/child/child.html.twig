{% extends 'adminBase.html.twig' %}

{% block content %}
<section class="dashboard-counts section-padding">
    <div class="container-fluid ">
        <div class="row">
            <!-- Count item widget-->
            <div class=" col-12 card">
                <div class="card-header">
                  <h1> {% trans with {'%org%':organisation.name} %}Kinder der Organisation %org%{% endtrans %} {% if is_granted('ROLE_ORG_CHILD_CHANGE') %} <a href="{{ path('workflow_start',{'slug':organisation.stadt.slug}) }}"><button href="#" type="button" class="btn  bmd-btn-fab bmd-btn-fab-sm">
                         <i class="material-icons">add</i>
                      </button></a>{% endif %}
                  </h1>
                </div>
<div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th></th>
                        <th>{% trans %}Vorname{% endtrans %}</th>
                        <th>{% trans %}Nachname{% endtrans %}</th>
                        <th>{% trans %}Eltern{% endtrans %}</th>
                        <th>{% trans %}Notfallkontakt{% endtrans %}</th>
                        <th>{% trans %}Schule{% endtrans %}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for k in kinder %}
                    <tr>
                        <td> <div class="btn-group">
                                <button class="btn bmd-btn-icon dropdown-toggle" type="button" id="ex2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">more_vert</i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-left" aria-labelledby="ex2">
                                    {% if is_granted('ROLE_ORG_CHILD_CHANGE') %}
                                    <a class="dropdown-item" href="{{ path('child_change_seccode',{'kind_id':k.id}) }}">{% trans %}Bearbeiten{% endtrans %}</a>
                                    {% endif %}
                                </div>
                            </div></td>
                        <td>{{ k.vorname }}</td>
                        <td>{{ k.nachname }}</td>
                        <td>{{ k.eltern.vorname }} {{ k.eltern.name }}</td>
                        <td>{{ k.eltern.notfallkontakt }}</td>
                        <td>{{ k.schule.name }}</td>

                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
</div>


            </div>
        </div>
    </div>
</section>

{% endblock %}
