{% extends 'adminBase.html.twig' %}

{% block content %}
    <section class="dashboard-counts section-padding">
        <div class="container-fluid ">
            <div class="row">
                <!-- Count item widget-->
                <div class=" col-12 card">
                    <div class="card-header">
                        <h1> {% trans %}Zahlungsarten{% endtrans %}  </h1>
                    </div>
                    <div class="card-body">
                        <div class="container">
                            <div class="row">
                                <div class=" col-lg-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <ul class="nav nav-tabs card-header-tabs" id="bologna-list" role="tablist">
                                                <li class="nav-item">
                                                    <a class="nav-link active" href="#description" role="tab"
                                                       aria-controls="description" aria-selected="true">Braintree</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" href="#history" role="tab"
                                                       aria-controls="history" aria-selected="false">Paypal</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" href="#deals" role="tab" aria-controls="deals"
                                                       aria-selected="false">Stripe</a>
                                                </li>
                                            </ul>
                                        </div>
                                        {{ form_start(form) }}


                                        <div class="card-body">


                                            <div class="tab-content mt-3">

                                                <div class="tab-pane active" id="description" role="tabpanel">
                                                    <h4 class="card-title">Braintree</h4>
                                                    {{ form_row(form.braintreeOK) }}
                                                    {{ form_row(form.braintreeSandbox) }}
                                                    {{ form_row(form.braintreeMerchantId) }}
                                                    {{ form_row(form.braintreePrivateKey) }}
                                                    {{ form_row(form.braintreePublicKey) }}

                                                </div>

                                                <div class="tab-pane" id="history" role="tabpanel"
                                                     aria-labelledby="history-tab">
                                                    <h4>In Progress</h4>
                                                </div>

                                                <div class="tab-pane" id="deals" role="tabpanel"
                                                     aria-labelledby="deals-tab">
                                                    {{ form_row(form.stripeOK) }}
                                                    {{ form_row(form.stripeID) }}
                                                    {{ form_row(form.stripeSecret) }}
                                                </div>
                                            </div>
                                        </div>

                                        {{ form_widget(form) }}
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



{% endblock %}
{% block jquery %}
    <script>
        $('#bologna-list a').on('click', function (e) {
            e.preventDefault()
            $(this).tab('show')
        })
    </script>
{% endblock %}
