{% extends 'adminBase.html.twig' %}

{% block content %}
    <section class="dashboard-counts section-padding">
        <div class="container-fluid ">
            <div class="row">
                <!-- Count item widget-->
                <div class=" col-12 card">
                    <div class="card-header">
                        <h1> {{ 'Stammdaten für die Buchhhaltung'|trans }}
                        </h1>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button"
                                            id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                            aria-expanded="false">
                                        {{ 'Alle Jahre'|trans }}
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item loadInTarget" data-target="#table"
                                           href="{{ path('accounting_showdata',{'id':organisation.id}) }}">{{ 'Alle Jahre'|trans }}</a>
                                        {% for y in organisation.stadt.actives %}
                                            <a class="dropdown-item loadInTarget" data-target="#table"
                                               href="{{ path('accounting_showdata',{'id':organisation.id,'year_id':y.id}) }}">{{ y.von|date('d.m.Y') }}</a>
                                        {% endfor %}

                                    </div>
                                </div>
                                <div class="table-responsive">

                                    <table class="table table-hover" id="table">
                                        <thead>
                                        <tr>
                                            <th></th>
                                            <th>{% trans %}Kundennummer{% endtrans %}</th>
                                            <th>{% trans %}Name{% endtrans %}</th>
                                            <th>{% trans %}E-Mail{% endtrans %}</th>
                                            <th>{% trans %}Adresse{% endtrans %}</th>
                                            <th>{% trans %}Postleitzahl{% endtrans %}</th>
                                            <th>{% trans %}Stadt{% endtrans %}</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for s in stammdaten %}
                                            <tr>
                                                <td>
                                                    <div class="btn-group">
                                                        <button class="btn bmd-btn-icon dropdown-toggle" type="button"
                                                                id="ex2" data-toggle="dropdown" aria-haspopup="true"
                                                                aria-expanded="false">
                                                            <i class="material-icons">more_vert</i>
                                                        </button>
                                                        <div class="dropdown-menu dropdown-menu-left"
                                                             aria-labelledby="ex2">
                                                            <a class="dropdown-item"
                                                               href="{{ path('accounting_showdata_customerid', {'id':organisation.id, 'stammdaten_id':s.id}) }}">{% trans %}Kundennummer zuweisen/ändern{% endtrans %}</a>
                                                            {% if app.user and is_granted('ROLE_ORG_SEE_PRICE') %}
                                                                <a class="dropdown-item"
                                                                   href="#stammdaten{{ s.id }}"
                                                                   data-toggle="modal">{% trans %}Monatliche Zahlungen{% endtrans %}</a>

                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </td>
                                                {% set kn = s.KundennummerForOrg(organisation.id) %}
                                                <td>{% if kn is defined and kn is not null %}{{ kn.kundennummer }}{% endif %}</td>
                                                <td>{{ s.vorname }} {{ s.name }}</td>
                                                <td>{{ s.email }}</td>
                                                <td>{{ s.strasse }}</td>
                                                <td>{{ s.plz }}</td>
                                                <td>{{ s.stadt }}</td>
                                            </tr>
                                            {% if app.user and is_granted('ROLE_ORG_SEE_PRICE') %}
                                                <div class="modal fade" id="stammdaten{{ s.id }}" tabindex="-1"
                                                     role="dialog"
                                                     aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title"
                                                                    id="exampleModalLabel">{{ 'Infos zu den Stammdaten'|trans }}</h5>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                        aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                {% set price = 0 %}
                                                                {% for k in s.kinds %}
                                                                    <h4>{{ k.vorname }} {{ k.nachname }}</h4>
                                                                    <p>{{ 'Monatliche Gebühren'|trans }}:
                                                                        <b>{{ getPreisforBetreuung(k)|format(2,',','.') }}€</b></p>
                                                                    {% set price = price +  getPreisforBetreuung(k) %}
                                                                {% endfor %}
                                                                <hr>
                                                                {{ 'Gesamtbetrag'|trans }}: {{ price }}€

                                                                <hr>
                                                              <p>{{ 'Alleinerziehend'|trans }}: <b>{{ s.alleinerziehend?'Ja':'Nein' }}</b></p>
                                                                <p>{{ 'SGB II, SGB XII, AsylbLG, Wohngeld oder Jugendhilfe'|trans }}: <b>{{ s.sozialhilfeEmpanger?'Ja':'Nein' }}</b></p>
                                                              <p>{{ 'Anzahl an Kindergelberechtigten Kinder im Haushalt'|trans }}: <b>{{ s.anzahlKindergeldempfanger }}</b></p>
                                                            </div>

                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                        data-dismiss="modal">{{ 'Schließen'|trans }}</button>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block jquery %}


{% endblock %}
