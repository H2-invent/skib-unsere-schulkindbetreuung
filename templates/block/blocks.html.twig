{% extends 'adminBase.html.twig' %}

{% block content %}
<section class="dashboard-counts section-padding">
    <div class="container-fluid ">
        <div class="row">
            <!-- Count item widget-->
            <div class=" col-12 card">
                <div class="card-header">
                    <h1> {{ schule.name }}</h1>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {{ schuljahre[0].von|date('d.m.Y') }} - {{ schuljahre[0].bis|date('d.m.Y') }}
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                {% for s in schuljahre %}
                                    <a class="schuljahrSelector dropdown-item" data-id="{{ s.id }}" href="#">{{ s.von|date('d.m.Y') }} - {{ s.bis|date('d.m.Y') }}</a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                <div class="col-md-2 offset-md-1">
                  <h5 class="card-title text-center">{% trans %}Montag{% endtrans %}</h5>
                    <div id="montagCol"></div>
                    <a style="padding-left: 25%" href="#" class="loadContent"><button href="#" type="button" class="btn  bmd-btn-fab bmd-btn-fab-sm">
                            <i class="material-icons">add</i>
                        </button></a>
                </div>
                    <div class="col-md-2">
                        <h5 class="card-title">{% trans %}Dienstag{% endtrans %}</h5>
                        <div id="dienstagCol"></div>
                    </div>
                    <div class="col-md-2">
                        <h5 class="card-title">{% trans %}Mittwoch{% endtrans %}</h5>
                        <div id="mittwochCol"></div>
                    </div>
                    <div class="col-md-2">
                        <h5 class="card-title">{% trans %}Donnerstag{% endtrans %}</h5>
                        <div id="donnerstagCol"></div>
                    </div>
                    <div class="col-md-2">
                        <h5 class="card-title">{% trans %}Freitag{% endtrans %}</h5>
                        <div id="freitagCol"></div>
                    </div>


                </div>
    </div>
</section>

{% endblock %}
{% block jquery %}
<script>
    $('.dropdown-item').click(function () {
        var ele = $(this);
        var text = ele.text();
        var dropdown = ele.closest('.dropdown').find('button');
        dropdown.text(text);
    })
</script>

{% endblock %}