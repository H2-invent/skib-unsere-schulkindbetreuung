{% extends 'workflow/base.html.twig' %}
{% block header %}
    <div class="col-md-12 mb-6 white-text text-centerm text-md-left align-items-md-center">

        <h1 class="hauptfarbe font-weight-bold">{% trans %}Alle Neuigkeiten{% endtrans %}</h1>
        <hr class="hr-light ">
    </div>
{% endblock %}
{% block content %}
    {% for n in news %}
    <div class="card">
        <div class="card-header">
            <h3>{{ n.title }}</h3>
        </div>
        <div class="card-body">
            {{ n.message }}
        </div>
        <div class="card-footer">
            {% trans %}Erstellt am{% endtrans %}: {{ n.date|date('d.m.Y') }}
        </div>
    </div>
    {% endfor %}
{% endblock %}
