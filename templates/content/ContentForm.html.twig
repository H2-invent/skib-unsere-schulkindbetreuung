{% extends 'adminBase.html.twig' %}

{% block content %}
<section class="dashboard-counts section-padding">
    <div class="container-fluid ">
        <div class="row">
            <!-- Count item widget-->
            <div class=" col-12 card">
                <div class="card-header">
                    <h1>{{ title }}</h1>
                </div>
                <div class="card-body">
                    <ul>
                        {% for error in errors %}
                            <li>{{ error.message }}</li>
                        {% endfor %}
                    </ul>
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    {{ form_row(form.save) }}
                    {{ form_row(form.slug) }}
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#deutsch" role="tab"
                               aria-controls="home" aria-selected="true">Deutsch</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#englisch" role="tab"
                               aria-controls="profile" aria-selected="false">Englisch</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="home-tab" data-toggle="tab" href="#franz" role="tab"
                               aria-controls="home" aria-selected="true">Französisch</a>
                        </li>

                    </ul>

                    <div class="tab-content" id="myTabContent">

                        <div class="tab-pane fade show active" id="deutsch" role="tabpanel"
                             aria-labelledby="home-tab"><h2>Deutsch</h2>
                            {{ form_row(form.titleDE) }}
                            {{ form_row(form.metaDE) }}
                            {{ form_row(form.contentDE) }}
                        </div>
                        <div class="tab-pane fade" id="englisch" role="tabpanel" aria-labelledby="profile-tab"><h2>
                                Englisch</h2>
                            {{ form_row(form.titleEN) }}
                            {{ form_row(form.metaEN) }}
                            {{ form_row(form.contentEN) }}
                        </div>

                        <div class="tab-pane fade" id="franz" role="tabpanel" aria-labelledby="profile-tab"><h2>
                                Französisch</h2>
                            {{ form_row(form.titleFR) }}
                            {{ form_row(form.metaFR) }}
                            {{ form_row(form.contentFR ) }}
                        </div>
                    </div>
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>


            </div>
        </div>
    </div>
</section>

{% endblock %}
{% block jquery %}
    <script>
        $(document).ready(function () {
            var form = $('form'),
                original = form.serialize()

            form.submit(function () {
                window.onbeforeunload = null
            })

            window.onbeforeunload = function () {
                if (form.serialize() != original)
                    return 'Are you sure you want to leave?'
            }
        })
    </script>


{% endblock %}
