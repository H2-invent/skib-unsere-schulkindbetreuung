        <td colspan="2">{{ 'Zutreffendes bitte ankreuzen'|trans }}:</td>
    </tr>
    <tr>
        <td>
            <table>
                <tr>
                    <td style="width: 30px">
                        <table style="width: 18px">
                            <tr>
                                <td style="width: 18px; border: 2px black solid"></td>
