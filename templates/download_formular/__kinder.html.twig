        <td colspan="2"></td>
    </tr>
    <tr>
        <td>{{ 'Mein Kind ist gegen Masern geimpft / bereits immun'|trans }}:</td>
        <td>
            <table cellspacing="3px">

                <tr>
                    <td style="width: 20px; border: 2px black solid"></td>
                    <td> Ja</td>
                </tr>
                <tr>
                    <td style="width: 20px; border: 2px black solid"></td>
                    <td> Nein</td>
                </tr>


            </table>
        </td>
    </tr>
    <tr>
        <td colspan="2"></td>
    </tr>
    <tr>
        <td style=" border-bottom: 1px black solid" colspan="2">{{ 'Allergien'|trans }}:</td>
    </tr>

    <tr>
        <td style=" border-bottom: 1px black solid" colspan="2">{{ 'Medikamente'|trans }}:</td>
    </tr>
