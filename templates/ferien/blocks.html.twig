
<div class="modal-dialog modal-fluid">
    <div class="modal-content">

<div class="modal-header">
    <h5 class="modal-title">{% trans %}Betreuungsblöcke anklicken zum auswählen{% endtrans %}</h5>

</div>
<div class="modal-body">
<div class="row">

    <div class="text-left card-body" id="accordion">
        {% for b in blocks %}
            <div class="card mb-2">
                <div class="card-header" id="heading{{ loop.index }}">
                    <h5 class="mb-0">
                        <a data-toggle="collapse" data-target="#collapse{{ loop.index }}" aria-expanded="false" aria-controls="collapse{{ loop.index }}">
                            {{ b.name }}
                        </a>
                    </h5>
               </div>

                <div id="collapse{{ loop.index }}" class="collapse" aria-labelledby="heading{{ loop.index }}" data-parent="#accordion">
                    <div class="card-body">

                    </div>
                </div>
            </div>
        {% endfor %}






</div>
    <div class="row">
        <div class="col-lg-12">
            <p>{% trans %}Monatlicher Preis für die Betreuung (incl. Vergünstigungen){% endtrans %}: <span class="price">{% if kind.tageWithBlocks>=2 %}{{ kind.PreisforBetreuung|number_format(2,',','.') }}€{% endif %}</span></p>

        </div>
    </div>



</div>
        <div class="modal-footer">
            <button type="button" class="btn btn-outline-primary " data-dismiss="modal">{% trans %}Speichern{% endtrans %}</button>

        </div>

    </div>
    <script>
        // popovers Initialization
        $(function () {
            $('[data-toggle="popover"]').popover()
        })
    </script>
</div>