{% if blocks is defined %}
    {% for b in blocks %}
        <div class="card">
            {% if b.deaktiviert %}
                <div class="blockdeactiviert">{{ b.schule.organisation.stadt.translate.schulkindbetreuungBlockDeaktiviertText|raw }}</div>
            {% endif %}
            <div class="card-body">
                <b>{{ b.von|date('H:i') }}-{{ b.bis|date('H:i') }}</b><br>
                {% if not b.hidePrice%}{{ 'Grundgebühr'|trans }}: {{ b.preise[gehaltIst]|number_format(2,',') }}€<br>{% endif %}
                {% if b.translate.extraText != ''%} {{ b.translate.extraText|raw }}   <br>{% endif %}
            </div>
        </div>

    {% endfor %}
{% endif %}
