{% apply inky_to_html|inline_css(source('@css/foundation-emails.css')) %}
    <style type="text/css">
        body,
        html,
        .body {
            background: #f3f3f3 !important;
        }

        .container.header {
            background: #f3f3f3;
        }

        .body-border {
            border-top: 8px solid #663399;
        }
    </style>

    <spacer size="16"></spacer>

    <container class="header">
        <row>
            <columns>
                <h1 class="text-center">{% block header %}{% trans %}Bestätigungscode für die Anmeldung zur Schulkindbetreuung {% endtrans %}{% endblock %}</h1>

                <center>
                    <menu class="text-center">
                        <item href="{{ absolute_url(path('welcome_landing')) }}">{% trans %}Home{% endtrans %}</item>
                        <item href="{{ absolute_url(path('impressum'))}}">{% trans %}Impressum{% endtrans %}</item>
                        <item href="{{ absolute_url(path('datenschutz')) }}">{% trans %}Datenschutz{% endtrans %}</item>
                        <item href="{{ absolute_url(path('nutzungsbedingungen')) }}">{% trans %}Nutzungsbedingungen{% endtrans %}</item>
                    </menu>
                </center>

            </columns>
        </row>
    </container>

    <container class="body-border">
        <row>
            <columns>

                <spacer size="32"></spacer>

                <center>
                    <img src="{{ asset('images/logo-breit-mittig.png') }}" style="max-width: 300px; margin-bottom: 30px">
                </center>

                <spacer size="16"></spacer>
{% block content %}

{% endblock %}
                <center>
                    <menu>
                        <item href="https://h2-invent.com">H2-Invent</item>
                        <item href="#">Facebook</item>
                        <item href="#">Twitter</item>
                        <item href="#">Phone</item>
                    </menu>
                </center>

            </columns>
        </row>

        <spacer size="16"></spacer>
    </container>
{% endapply %}
